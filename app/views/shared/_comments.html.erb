<ul class="list-group list-group-flush bg-light rounded-card">
  <% @comments.each do |comment| %>
    <li class="list-group-item rounded-card d-flex justify-content-between align-items-top mt-2 border-0 ">
      <div class="comment-info">
        <div class="d-flex align-items-streched">
          <%= image_tag comment.user.avatar.nav.url, class: "rounded-circle avatar-circle", width: "30", height: "30" %>
          <div>
            <%= link_to user_path(comment.user) do %>
              <b><%= comment.user.name %></b> 
            <% end %>
            <small><span class="text-secondary"> <%= comment.updated_at.strftime("%b %-d, %Y") %></span></small>
            <div><%= comment.body %></div>
          </div>
        </div>
      </div>

      <% if comment.user_id == current_user.id %>
        <div class="dropdown">											
          <button class="btn btn-link dropdown-toggle no-caret" type="button" id="group_option" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-ellipsis-h"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="group_option">
            <%= link_to "Edit", edit_post_comment_path(comment.post, comment), remote: true, class:"dropdown-item", data: { toggle: "modal", target: "#common-modal"} %>
            <%= link_to "Delete", delete_post_comment_path(comment.post, comment), remote: true, class:"dropdown-item", data: { toggle: "modal", target: "#common-modal"} %>
          </div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
