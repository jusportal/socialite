<% content_for :body do %>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 offset-sm-3 col-md-3 mt-5">
        <div class="mb-3 text-center">
          <%= link_to :root do %>
            <%= image_tag "white-logo.png",  width:"300", height:"150"%>
          <% end %>
        </div>
        <div class="card mt-2">
          <div class="card-body m-2">
            <h5>Create an account.</h5>        
            <div class="mt-3">
              <%= form_for @user, url: :user_registration do |f| %>
                <fieldset>
                  <div class="form-group  <%= 'has-error' if @user.errors.include?(:first_name) %>">
                    <%= f.label :first_name %>
                    <% if @user.errors.include?(:first_name) %>
                      <span class="error name-error"> <%= @user.errors[:first_name].first %></span>
                    <% end %>
                    <%= f.text_field :first_name, {id: "first_name", class: "form-control" } %>
                  </div>

                  <div class="form-group  <%= 'has-error' if @user.errors.include?(:last_name) %>">
                    <%= f.label :last_name %>
                    <% if @user.errors.include?(:last_name) %>
                      <span class="error name-error"> <%= @user.errors[:last_name].first %></span>
                    <% end %>
                    <%= f.text_field :last_name, {id: "last_name", class: "form-control" } %>
                  </div>

                  <div class="form-group  <%= 'has-error' if @user.errors.include?(:email) %>">
                    <%= f.label "Email" %>
                    <% if @user.errors.include?(:email) %>
                      <span class="error name-error"> <%= @user.errors[:email].first %></span>
                    <% end %>
                    <%= f.text_field :email, {id: "email", class: "form-control"} %>
                  </div>
                  
                  <div class="form-group <%= 'has-error' if @user.errors.include?(:password) %>">
                  <%= f.label :password %>
                    <% if @user.errors.include?(:password) %>
                      <span class="error password-error"> <%= @user.errors[:password].first %></span>
                    <% end %>
                    <%= f.password_field :password, {id: "password", class: "form-control"} %>                
                  </div>

                  <div class="form-group <%= 'has-error' if @user.errors.include?(:password_confirmation) %>">
                    <%= f.label :confirm_password %>
                    <% if @user.errors.include?(:password_confirmation) %>
                      <span class="error password_confirmation-error"> <%= @user.errors[:password_confirmation].first %></span>
                    <% end %>
                    <%= f.password_field :password_confirmation, {id: "password_confirmation", class: "form-control"}%>
                  </div>
                  
                  <div class="checkbox">
                    <% if @user.errors.include?(:terms) %>
                      <span class="error terms-error"> <%= @user.errors[:terms].first %></span>
                    <% end %>
                    <label>
                      <%= f.check_box :terms, id: "terms" %>
                      <small>I agree to the Terms and Conditions</small>
                    </label>
                  </div>

                  <%= f.submit "Create an account", {class: "btn btn-primary border-0 gradient btn-lg btn-block"} %>
                </fieldset>
              <% end %>

            </div>
          </div><!-- card body -->
        </div><!-- card -->
        <p class="text-center text-white mt-3">Already have an account? <%= link_to "Please sign in.", :new_user_session, class: "text-white" %></p>
      </div>
    </div>
  </div>
<% end %>

<%= render 'devise/shared/layout' %>